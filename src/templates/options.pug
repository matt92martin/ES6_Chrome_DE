extends template.pug

block css
    link(rel="stylesheet" type="text/css" href="css/options.css")
    - cssurl = 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    link(rel="stylesheet" type="text/css" href=cssurl integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")

block content
    div(class='container-fluid')
        div(class='row')
            div(class='col-md-4')

                h1 Server List

                label(for="sites") Sites
                div(class="form-group")
                    textarea(id="sites" class="form-control")

                div(class="form-group")
                    input(type="checkbox" class="form-check-input" name="special" id="special")
                    label(for="special" class="form-check-label") Look and Feel overrides

                div(class="form-check")
                    input(type="checkbox" class="form-check-input" name="showmodal" id="showmodal")
                    label(for="showmodal" class="form-check-label") Show portal modal (Use at own risk. This is no longer supported)

                br
                br
                div(class="form-group")
                    button(id="save" class="btn btn-primary") Save

                div(id="status")

block scripts
    script(src="options.js")